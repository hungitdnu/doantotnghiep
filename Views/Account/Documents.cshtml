@model List<TaiLieu>

<section style="background-color: #eee;">
    <div class="container py-5">
        <h1>Thông tin hồ sơ</h1>
        <ul class="list-group">
            @foreach(var item in Model)
            {
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <a asp-action="EditDocuments" asp-route-document_id="@item.MaTaiLieu">@item.TenTaiLieu</a><span class="badge badge-success bg-success rounded-pill p-2">Đã tải lên</span>
                </li>
            }
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <a class="btn btn-info" asp-action="AddDocument">Thêm mới</a>
            </li>
        </ul>
    </div>
</section>