@model HeThongDangKyDuHoc.Models.Account
@{
    SinhVien sv = ViewBag.SinhVien;
    List<CustomNotification> notis = ViewBag.Notis;
}
<form asp-action="ChangePassword" method="post" enctype="multipart/form-data">
<section style="background-color: #eee;">
    <div class="m-5 py-5">
        
        <div class="row">
            <div class="col-lg-6">
                <div class="card mb-4">
                    <div class="card-body text-center">
                        <img src="~/img/avatars/@sv.HinhAnh" alt="avatar" class="rounded-circle img-fluid" style="width: 150px;">
                        <h5 class="my-3">@sv.HoTen</h5>
                        <p class="text-muted mb-1">Ngành: @sv.MaNganh</p>
                        <p class="text-muted mb-4">Lớp: @sv.MaLop</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                    <div class="card mb-4">
                        <div class="card-body">
                            <input type="hidden" value="@sv.MaSinhVien" name="IdSinhVien" readonly />
                            <div class="row">
                                <div class="col-sm-6">
                                    <p class="mb-0">Mật khẩu cũ</p>
                                </div>
                                <div class="col-sm-6">
                                    <input class="form-control" type="password" name="old_password" value="" placeholder="Nhập mật khẩu cũ" required>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-6">
                                    <p class="mb-0">Mật khẩu mới</p>
                                </div>
                                <div class="col-sm-6">
                                    <input class="form-control" type="password" name="new_password" value="" placeholder="Nhập mật khẩu mới" required>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-6">
                                    <p class="mb-0">Nhập lại mật khẩu mới</p>
                                </div>
                                <div class="col-sm-6">
                                    <input class="form-control" type="password" name="repeat_new_password" placeholder="Nhập lại mật khẩu mới" required>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-12">
                                    <input type="submit" class="btn btn-primary pl-3 pr-3" value="Lưu">
                                    <a class="btn btn-danger pl-3 pr-3" asp-action="Index">Hủy</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
        </div>
        <div class="row">
                <div class="notification w-100">
                    @foreach (CustomNotification notification in notis)
                    {
                        <div class="alert alert-@notification.Type mb-3" role="alert">
                            @notification.Message
                        </div>
                    }
                </div>
        </div>
    </div>
</section>
</form>