@model IEnumerable<HeThongDangKyDuHoc.Models.DuHoc>

@{
    ViewData["Title"] = "Courses";
    int pageCurrent = (int)ViewData["pageNumber"];
}

<div class="jumbotron jumbotron-fluid page-header position-relative overlay-bottom" style="margin-bottom: 90px;">
    <div class="container text-center py-5">
        <h1 class="text-white display-1">Courses</h1>
        <div class="d-inline-flex text-white mb-5">
            <p class="m-0 text-uppercase"><a class="text-white" asp-action="Index">Home</a></p>
            <i class="fa fa-angle-double-right pt-1 px-3"></i>
            <p class="m-0 text-uppercase">Courses</p>
        </div>
    </div>
</div>

<div class="container-fluid py-5">
    <div class="container py-5">
        <div class="row mx-0 justify-content-center">
            <div class="col-lg-8">
                <div class="section-title text-center position-relative mb-5">
                    <h6 class="d-inline-block position-relative text-secondary text-uppercase pb-2">Our Courses</h6>
                    <h1 class="display-4">Checkout New Releases Of Our Courses</h1>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach(DuHoc dh in Model)
            {
                <div class="col-lg-4 col-md-6 pb-4">
                    <a class="courses-list-item position-relative d-block overflow-hidden mb-2" asp-action="Details" asp-route-id="@dh.MaKhoaDuHoc">
                        <img class="img-fluid" src="~/img/courses/@dh.Image" alt="">
                        <div class="courses-text">
                            <h4 class="text-center text-white px-3">
                                @dh.Ten
                            </h4>
                            <div class="border-top w-100 mt-3">
                                <div class="d-flex justify-content-between p-4">
                                    <span class="text-white"><i class="fa fa-graduation-cap mr-2"></i>@dh.TenTruong</span>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            }
            <div class="col-12">
                <nav aria-label="Page navigation">
                    <ul class="pagination pagination-lg justify-content-center mb-0">
                        <li class="page-item">
                            <a class="page-link rounded-0" asp-action="Index" asp-route-page="@(pageCurrent - 1)" aria-label="Previous">
                                <span aria-hidden="true">«</span>
                                <span class="sr-only">Previous</span>
                            </a>
                        </li>
                        <li class="page-item active"><a class="page-link" asp-action="Index" asp-route-page="@(pageCurrent)">@pageCurrent</a></li>
                        <li class="page-item">
                            <a class="page-link rounded-0" asp-action="Index" asp-route-page="@(pageCurrent + 1)" aria-label="Next">
                                <span aria-hidden="true">»</span>
                                <span class="sr-only">Next</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>