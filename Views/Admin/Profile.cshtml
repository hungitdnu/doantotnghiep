@model GiangVien
@{
    List<CustomNotification> notifications = ViewBag.Notifications;
}
<form class="form" asp-action="EditProfile" method="post" id="registrationForm" enctype="multipart/form-data">
    <div class="mt-5 container bootstrap snippet">
        <div class="row">
            <div class="col-sm-10"><h1>@Model.Username</h1></div>
            <input type="hidden" name="Username" value="@Model.Username" readonly />
            @* <div class="col-sm-2"><a href="/users" class="pull-right"></a></div> *@
        </div>
        <div class="row">
            <div class="col-sm-3">
                <!--left col-->
                <div class="text-center">
                    <img src="~/img/avatars/@Model.AnhDaiDien" class="avatar img-circle img-thumbnail" alt="avatar">
                    <input type="file" name="Image" class="text-center center-block file-upload mt-3">
                </div>
                <br>
                <ul class="list-group">
                    <li class="list-group-item text-left"><span class="pull-left"><strong class="mr-3">Mã giảng viên</strong></span>@Model.MaGiangVien</li>
                    <input type="hidden" name="MaGiangVien" value="@Model.MaGiangVien" readonly />
                    <li class="list-group-item text-left"><span class="pull-left"><strong class="mr-3">Họ tên</strong></span>@Model.HoTen</li>
                    <input type="hidden" name="HoTen" value="@Model.HoTen" readonly />
                    <li class="list-group-item text-left"><span class="pull-left"><strong class="mr-3">Số CMND</strong></span>@Model.SoCMND</li>
                    <input type="hidden" name="SoCMND" value="@Model.SoCMND" readonly />
                    <li class="list-group-item text-left"><span class="pull-left"><strong class="mr-3">Chức vụ</strong></span>@Model.ChucVu</li>
                    <input type="hidden" name="ChucVu" value="@Model.ChucVu" readonly />
                    <li class="list-group-item text-left"><span class="pull-left"><strong class="mr-3">Giới tính</strong></span>@Model.GioiTinh</li>
                    <input type="hidden" name="GioiTinh" value="@Model.GioiTinh" readonly />
                </ul>
            </div><!--/col-3-->
            <div class="col-sm-9">
                <div class="tab-content">
                    <div class="tab-pane active" id="home">
                        <hr>
                        <input type="hidden" value="@Model.MaGiangVien" name="MaGiangVien" readonly />
                        <div class="form-group">
                            <div class="col-xs-6">
                                <label for="em"><h4>Email</h4></label>
                                <input type="email" class="form-control" name="Email" value="@Model.Email" id="em" placeholder="Email">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-6">
                                <label for="SoDienThoai"><h4>Số điện thoại</h4></label>
                                <input type="text" class="form-control" value="@Model.SoDienThoai" name="SoDienThoai" id="SoDienThoai" placeholder="Số điện thoại" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-6">
                                <label for="DiaChi"><h4>Địa chỉ</h4></label>
                                <input type="text" class="form-control" value="@Model.DiaChi" name="DiaChi" id="DiaChi" placeholder="Địa chỉ hiện tại" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-6">
                                <label for="HocVi"><h4>Học vị</h4></label>
                                <input type="text" class="form-control" value="@Model.HocVi" name="HocVi" id="HocVi" placeholder="Nhập học vị hiện tại" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-6">
                                <label for="bir"><h4>Ngày sinh</h4></label>
                                <input type="text" value="@Model.NgaySinh.ToString("dd/MM/yyyy")" class="form-control" name="birth" id="bir" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-6">
                                <label for="newp"><h4>Mật khẩu mới</h4></label>
                                <input type="password" value="" class="form-control" name="new_password" id="newp" placeholder="Nhập mật khẩu mới (bỏ trống nếu không muốn thay đổi)" title="">
                            </div>
                        </div>
                        @if (notifications.Count > 0)
                        {
                            <div class="form-group mb-2">
                                <div class="col-xs-6">
                                    @foreach (var notification in notifications)
                                    {
                                        <div class="alert alert-@notification.Type">
                                            @notification.Message
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                        <div class="form-group">
                            <div class="col-xs-12">
                                <br>
                                <button class="btn btn-lg btn-success" type="submit"><i class="glyphicon glyphicon-ok-sign"></i> Save</button>
                            </div>
                        </div>

                        <hr>
                    </div><!--/tab-pane-->
                </div><!--/tab-pane-->
            </div><!--/tab-content-->

        </div><!--/col-9-->
    </div>
</form>
<script>
    var readURL = function (input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                $('.avatar').attr('src', e.target.result);
            }

            reader.readAsDataURL(input.files[0]);
        }
    }

    $(".file-upload").on('change', function () {
        readURL(this);
    });
</script>