@{
    List<string> thongBao = ViewBag.ThongBao;
    string typeTb = ViewBag.TypeTB;
}
<div class="content-wrapper" style="min-height: 510px;">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Profile</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/Admin">Home</a></li>
                        <li class="breadcrumb-item active">View Student</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <form asp-action="AddStudent" method="post" enctype="multipart/form-data">
        <section class="content">
            <div class="container-fluid">
                @if(typeTb != "")
                {
                    <div class="form-group">
                        @foreach (string tb in thongBao)
                        {
                            <div class="alert alert-@typeTb mt-3" role="alert">
                                @tb
                            </div>
                        }
                    </div>
                }

                <div class="row">
                    <div class="col-md-12">
                        <!-- Profile Image -->
                        <div class="card card-primary">
                            <div class="card-header">
                                <h3 class="card-title">Thông tin cơ bản</h3>
                            </div>
                            <div class="card-body box-profile">
                                <ul class="list-group list-group-unbordered mb-3 mt-3">
                                    <li class="list-group-item">
                                        <b>Mã sinh viên</b> <input class="form-control" type="number" name="MaSinhVien" required="">
                                    </li>
                                    <li class="list-group-item">
                                        <b>FullName</b> <input class="form-control" type="text" name="HoTen" required="">
                                    </li>
                                    <li class="list-group-item">
                                        <b>Email</b> <input class="form-control" type="email" name="Email" required="">
                                    </li>
                                    <li class="list-group-item">
                                        <b>CCCD</b> <input class="form-control" type="number" name="CMND" required="">
                                    </li>
                                    <li class="list-group-item">
                                        <b>Birth</b> <input class="form-control" type="text" name="Birthday" required="">
                                    </li>
                                    <li class="list-group-item">
                                        <b>Gender</b>
                                        <select class="form-control mt-3" name="GioiTinh">
                                            <option value="Nam" selected="">Nam</option>
                                            <option value="Nữ">Nữ</option>
                                        </select>
                                    </li>
                                    <li class="list-group-item">
                                        <b>SDT</b> <input class="form-control" type="number" name="SoDienThoai" required="">
                                    </li>
                                    <li class="list-group-item">
                                        <b>Địa chỉ</b> <input required="" name="DiaChi" type="text" class="form-control">
                                    </li>
                                </ul>
                            </div>
                            <!-- /.card-body -->
                        </div>
                        <!-- /.card -->
                        <!-- About Me Box -->

                        <div class="card card-info">
                            <div class="card-header">
                                <h3 class="card-title">Ngành học</h3>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">
                                <strong>Mã ngành</strong>
                                <input class="form-control" type="text" name="MaNganh" required="">
                                <hr>
                                <strong>Mã lớp</strong>
                                <input class="form-control" type="number" name="MaLop" required="">
                                <hr>
                                <strong>Mã hệ đào tạo</strong>
                                <input class="form-control" type="text" name="MaHeDaoTao" required="">
                                <hr>
                                <strong>Mã chương trình học</strong>
                                <input class="form-control" type="text" name="MaChuongTrinhHoc" required="">
                                <hr>
                                <strong>Khóa</strong>
                                <input class="form-control" type="number" name="NienKhoa" required="">
                                <hr>
                            </div>
                            <!-- /.card-body -->
                        </div><div class="card card-secondary">
                            <div class="card-header">
                                <h3 class="card-title">Tài khoản</h3>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">
                                <strong>Tài khoản</strong>
                                <input class="form-control" type="text" name="tk" required="">
                                <hr>
                                <strong>Mật khẩu</strong>
                                <input class="form-control" type="text" name="mk" required="">
                                <hr>
                                <strong>Avatar</strong>
                                <input class="form-control form-control-lg" type="file" name="Image" accept="image/*">
                                <hr>
                            </div>
                            <!-- /.card-body -->
                        </div>
                        <!-- /.card -->
                        <div class="mb-3"><input type="submit" class="btn btn-primary"></div>
                    </div>
                </div>
                <!-- /.row -->
            </div><!-- /.container-fluid -->
        </section>
    </form>
    <!-- /.content -->
</div>